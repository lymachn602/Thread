<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANR(Application Not Responsing)"
        android:onClick="anr"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thread类实现多线程"
        android:onClick="threadclass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runable接口实现多线程"
        android:onClick="runableinterface"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time TimerTask实现多线程"
        android:onClick="timetask"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler消息处理器"
        android:onClick="handlermessage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"/>

</LinearLayout>
